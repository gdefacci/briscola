.player-deck-layer {
  position:fixed;
  
  background-color: yellow;
  border: 2px solid black;
  min-height:200px;
  left:25%;
  width:50%;
  opacity:0.95;
  padding-bottom: 30px;
  padding-top: 30px;

  button {
    margin-top:30px;
  }
}

.player-deck-summary {

  display: flex;
  vertical-align:middle;
  padding-left:30px;

  img {
    width:50px;
  }
  
  img:last-child {
    width:100px;
  }
  
  span:first-child {
    margin-top: 50px; /* to center vertically */
    display: inline-block;
    width: 40px;
  }
  
}